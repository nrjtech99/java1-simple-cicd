pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out the code...'
                bat 'git checkout master'
            }
        }

        stage('Build') {
            steps {
                echo 'Building the project...'
                script {
                        bat 'git pull'
                        bat 'mvn install'

                }
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'

            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'Building Docker image...'

            }
        }

        stage('Publish Docker Image') {
            steps {
                echo 'Publishing Docker image...'

            }
        }

        stage('Release') {
            environment {
                DOCKER_HUB_TOKEN     = credentials('DOCKER_HUB_TOKEN')
            }
            steps {
                echo 'Releasing...'
                 withCredentials([sshUserPrivateKey(credentialsId: 'jenkins-id-rsa', keyFileVariable: 'SSH_KEY')]) {
                            bat 'git tag'

                            bat 'git pull --tags'
                            bat 'git pull'

                            withCredentials([usernamePassword(credentialsId: 'DOCKER_HUB_TOKEN', passwordVariable: 'dockerHubPassword', usernameVariable: 'dockerHubUser')]) {
                              bat 'mvn release:prepare -f publisher/pom.xml -DdockerHubPassword=$dockerHubPassword -DdockerHubUser=$dockerHubUser'
                              bat 'mvn release:perform -f publisher/pom.xml -DdockerHubPassword=$dockerHubPassword -DdockerHubUser=$dockerHubUser'
                            }
                 }
            }
        }


    }

    post {
        always {
            echo 'Cleaning up...'

        }
    }
}